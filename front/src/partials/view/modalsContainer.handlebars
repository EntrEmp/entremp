<!--modal solicitar cotización-->

<div id="solicitarCotizacion" class="modal modals-container modals--cotizacion">
  <div class="modal-content">
    <div class="row">
      <i class="tiny material-icons close">clear</i>
      <div class="col s12">
        <h5> Solicitar cotización!</h5>
      </div>
      <div class="col s12">
        <div class="col s3 z-depth-1 modal--img">
          <img src="https://via.placeholder.com/100x100?text=100x100+Logo">
        </div>
        <div class="col s9">
          <div class="col s12 modals--subtitle">
            <h5>Mesa y sillas</h5>
            <h6>Musimundo</h6>
            <p>Lorem ipsum dolor sit, amet consectetur adipisicing elit.</p>
          </div>
          <div class="col s12 modals--cantidad">
            <p>Ingrese la cantidad de unidades a solicitar.</p>
            <div class="col s5">
              <input type="text" name="" id="" placeholder="10 unidades">
            </div>
            <div class="col s4 modals--lote">
              <p>Lote: xx</p>
              <p>Max:xx</p>
            </div>
          </div>
          <div class="col s12">
            <p class="modals--disponible">(800 disponibles)</p>
          </div>
        </div>
      </div>
    </div>
    <div class="col s12">
      <textarea name="" id="" cols="12" rows="5"></textarea>
    </div>
    <div class="col s12 modals--submit">
      <button class="btn waves-effect waves-light center-align" type="submit" name="action">Cargar archivo</button>
      <p>El archivo debe ser inferior a 500MB</p>
    </div>
    <div class="col s12 modals--footer">
      <button href="#modalSucess" class=" modal-trigger btn waves-effect waves-light" type="submit"
        name="action">Solicitar cotización</button>
    </div>

  </div>
</div>
</div>

<!--modal cotización solicitada-->

<div id="cotizacionSolicitada" class="modal modals-container modals--sucess">
  <div class="modal-content ">
    <i class="tiny material-icons close">clear</i>
    <div class="row">
      <div class="col s12">
        <h5>Cotización solicitada con éxito!</h5>
      </div>
      <div class="col s12 modals--sucessCenter">
        <p>La cotización ya fue solicitada al proveedor</p>
      </div>
      <div class="col s12 modals--detail">
        <h6>DETALLE:</h6>
        <p>Producto: 456 sillas negras</p>
        <p>Proveedor: Musimundo</p>
        <p>Fecha de cotización: 02/06/2019</p>
      </div>
    </div>
  </div>
</div>

<!--modal cargar un nuevo producto-->

<div id="nuevoProducto" class="modal modals-container modals--product">
  <div class="modal-content ">
    <i class="tiny material-icons close">clear</i>
    <div class="row">
      <div class="col s12">
        <h5>Carga un nuevo producto!</h5>
        <label for="productname">Nombre del producto:</label>
        <input type="text" name="productname" id="" placeholder="Ej:Televisiones led">

        <label for="description">Descripción:</label>
        <input type="text" name="description" id=""
          placeholder="loremipsum loremipsum  loremipsum loremipsum loremipsum loremipsum loremipsum loremipsum loremipsum loremipsum loremipsum loremipsum">
      </div>
      <!--Categorias-->
      <div class="col s12">
        <div class="input-field modals--select">
          <select>
            <option value="1">Option 1</option>
            <option value="2">Option 2</option>
            <option value="3">Option 3</option>
          </select>
          <label>Categorias</label>
        </div>
        <p>Selecciona la categoria más acorde al producto que querés publicar</p>
      </div>

      <div class="col s12 modals--next">
        <!--submit con flecha-->
        <a href="#"> Siguiente </a><i class="small material-icons modals--arrow">navigate_next</i>
      </div>
    </div>

  </div>
</div>

<!-- Stock disponible-->

