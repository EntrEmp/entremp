<div class="container-fluid detail-products">
    <div class="row ">
        <div class="col s12 m4 l8 detail-products--photos">
            <!--Breadcrum-->
            <div class="col s12 m4 l12 detail-products--breadcrumb">
                <p><a href="javascript:history.back()">Productos</a></p> - <p>{{product.name}}</p>
                <!--<a class="modal-trigger data--modify" href="#imagesModal">imagenes</a>-->
            </div>

            <!--Photo List-->
            <div class="col s12 m4 l2 detail-products--photo-min">
                {{#product.images}}
                    <span class="z-depth-1">
                     <img class="materialboxed"
                          width="80"
                          height="80"
                          src="{{s3Link}}">
                    </span>
                {{/product.images}}
            </div>

            <!--Selected photo-->
            <div class="col s12 m4 l10 detail-products--photo-container">
                <div class="slider">
                    <ul class="slides">
                        {{#product.images}}
                            <li>
                                <img src="{{s3Link}}">
                            </li>
                        {{/product.images}}
                    </ul>
                </div>
            </div>
        </div>

        <!--View Card-->
        <div class="col s12 m4 l4 card card-detail">
            <a  href="/seller/products/{{product.id}}/edit">Editar</a>

            <div class="card-detail--information">
                <h5> {{product.name}} </h5>

                <div class="col s12 container">
                    <h6>Categorias</h6>
                    <hr>
                    {{#product.productCategories}}
                        <div class="chip">
                            {{category.name}}
                        </div>
                    {{/product.productCategories}}
                </div>

                <div class="col s12 container">
                    <h6>Atributos</h6>
                    <hr>
                    {{#product.productAttributes}}
                        <div class="chip">
                            {{attribute.name}}
                        </div>
                    {{/product.productAttributes}}
                </div>

                <div class="col s12 container">
                    <h6>Descripción</h6>
                    <hr>
                    <p class="detail">{{product.description}}</p>
                </div>

                <div class="col s12 container">
                    <p class="seller">
                        Cantidad mínima de compra: <strong>{{product.minimum}} unidades</strong>
                    </p>
                    <p class="seller">
                        Tamaño de lote: <strong>{{product.batchSize}} unidades</strong>
                    </p>
                    <p class="seller"> {{product.maximum}} productos disponibles</p>
                </div>

                <div class="col s12 container">
                    <p class="addres">
                        <i class="material-icons">location_on</i>
                    </p>
                </div>

            </div>
        </div>

    </div>
</div>

<div id="imagesModal" class="modal">
    <div class="modal-content">
    </div>
</div>

