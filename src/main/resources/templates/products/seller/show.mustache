<div class="container-fluid detail-products">
    <div class="row ">
        <div class="col s12 m4 l8 detail-products--photos">
            <!--Breadcrum-->
            <div class="col s12 m4 l12 detail-products--breadcrumb">
                <p>Lorem ipsum </p> - <P>Lorem ipsum</P>
                <a class="modal-trigger data--modify" href="#imagesModal">imagenes</a>
            </div>

            <!--Photo List-->
            <div class="col s12 m4 l2 detail-products--photo-min">
                {{#images}}
                    <span class="z-depth-1">
                     <img class="materialboxed"
                          width="80"
                          height="80"
                          src="{{s3Link}}">
                    </span>
                {{/images}}
            </div>

            <!--Selected photo-->
            <div class="col s12 m4 l10 detail-products--photo-container">
                <div class="slider">
                    <ul class="slides">
                        {{#images}}
                            <li>
                                <img src="{{s3Link}}">
                            </li>
                        {{/images}}
                    </ul>
                </div>
            </div>
        </div>

        <!--View Card-->
        <div class="col s12 m4 l4 card card-detail">
            <a  href="/web/seller/products/{{id}}/edit">Editar</a>
            <div class="card-detail--information">
                <h5> {{name}} </h5>
                <h6> TODO atributos </h6>
                <p class="detail">{{description}}</p>

                <p class="seller"> {{minimum}} cantidad m√≠nima de compra</p>
                <p class="seller"> {{maximum}} productos disponibles</p>
                <p class="seller"> {{batch}} lotes de product</p>

                <p class="addres"> <i class="material-icons">location_on</i></p>

            </div>
        </div>

    </div>
</div>

<div id="imagesModal" class="modal">
    <div class="modal-content">
    </div>
</div>

