<!--Search Filter-->
<div class="col s12 m3 l2">

    <form id="filter" method="post" action="/api/products/filter" enctype="multipart/form-data">

        <ul class="collapsible expandable filter-collapsible">
            {{#showFilter}}
                <li>
                    {{#criteria}}
                        <input type="hidden" id="criteria" name="criteria" value="{{.}}">
                        <div class="chip">
                            {{.}}
                            <a class="dismiss" data-remove="criteria">
                                <i class="close material-icons">close</i>
                            </a>
                        </div>
                    {{/criteria}}

                    {{#categories}}
                        <div class="chip">
                            {{name}}
                            <a class="dismiss" data-remove="{{id}}">
                                <i class="close material-icons">close</i>
                            </a>
                        </div>
                    {{/categories}}
                    {{#attributes}}
                        <div class="chip">
                            {{name}}
                            <a class="dismiss" data-remove="{{id}}">
                                <i class="close material-icons">close</i>
                            </a>
                        </div>
                    {{/attributes}}
                    {{#certifications}}
                        <div class="chip">
                            {{name}}
                            <a class="dismiss" data-remove="{{id}}">
                                <i class="close material-icons">close</i>
                            </a>
                        </div>
                    {{/certifications}}
                </li>

            <li class="">
                <div class="collapsible-header">
                    <i class="material-icons">expand_more</i>
                    <p>filtrar por cantidad</p>
                </div>
                <div class="collapsible-body collapsible-filter-body col s12">
                    {{#minimum}}
                        <input id="minimum" name="minimum" type="number" class="col s3 validate collapsible-input" placeholder="min" value="{{.}}">
                    {{/minimum}}
                    {{^minimum}}
                        <input id="minimum" name="minimum" type="number" class="col s3 validate collapsible-input" placeholder="min">
                    {{/minimum}}

                    {{#maximum}}
                        <input id="maximum" name="maximum" type="number" class="col s3 offset-s1 validate collapsible-input" placeholder="max" value="{{.}}">
                    {{/maximum}}
                    {{^maximum}}
                        <input id="maximum" name="maximum" type="number" class="col s3 offset-s1 validate collapsible-input" placeholder="max">
                    {{/maximum}}

                    <button type="submit" class="btn waves-effect waves-light col s3 offset-s1">
                        <i class="material-icons medium">check</i>
                    </button>
                </div>
            </li>

            <li class="">
                <div class="collapsible-header">
                    <i class="material-icons">expand_more</i>
                    <p>filtrar por lote</p>
                </div>
                <div class="collapsible-body collapsible-filter-body col s12">
                    {{#minBatch}}
                        <input id="minBatch" name="minBatch" type="number" class="col s3 validate collapsible-input" placeholder="min" value="{{.}}">
                    {{/minBatch}}
                    {{^minBatch}}
                        <input id="minBatch" name="minBatch" type="number" class="col s3 validate collapsible-input" placeholder="min">
                    {{/minBatch}}

                    {{#maxBatch}}
                        <input id="maxBatch" name="maxBatch" type="number" class="col s3 offset-s1 validate collapsible-input" placeholder="max" value="{{.}}">
                    {{/maxBatch}}
                    {{^maxBatch}}
                        <input id="maxBatch" name="maxBatch" type="number" class="col s3 offset-s1 validate collapsible-input" placeholder="max">
                    {{/maxBatch}}

                    <button type="submit" class="btn waves-effect waves-light col s3 offset-s1">
                        <i class="material-icons medium">check</i>
                    </button>
                </div>
            </li>

            {{/showFilter}}

            <!--Collapsable Filter-->
            <li class="">
                <div class="collapsible-header">
                    <i class="material-icons">expand_more</i>
                    <p>Certificaciones</p>
                </div>
                {{#certifications}}
                    <div class="collapsible-body">
                        <label>
                            <input id="{{id}}" type="checkbox" name="certifications" value="{{id}}"/>
                            <span>{{name}}</span>
                        </label>
                    </div>
                {{/certifications}}
            </li>

            <!--Collapsable Filter-->
            <li class="">
                <div class="collapsible-header">
                    <i class="material-icons">expand_more</i>
                    <p>Categorias</p>
                </div>
                {{#categories}}
                    <div class="collapsible-body">
                        <label>
                            <input id="{{id}}" type="checkbox" name="categories" value="{{id}}"/>
                            <span>{{name}}</span>
                        </label>
                    </div>
                {{/categories}}
            </li>

            <!--Collapsable Filter-->
            <li class="">
                <div class="collapsible-header">
                    <i class="material-icons">expand_more</i>
                    <p>Atributos</p>
                </div>
                {{#attributes}}
                    <div class="collapsible-body">
                        <label>
                            <input id="{{id}}" type="checkbox" name="attributes" value="{{id}}"/>
                            <span>{{name}}</span>
                        </label>
                    </div>
                {{/attributes}}
            </li>
        </ul>

        <input type="hidden" id="searchPage" name="searchPage" value="1">

        <button type="submit" class="btn waves-effect waves-dark col s12 ">Aplicar</button>
    </form>
</div>