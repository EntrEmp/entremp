<!--Product Preview-->
<div class="col s12 m4">

    <div class="card card-products">

        <!--Preview Image-->
        <div class="card-image card-products--image z-depth-1">
            <img alt="preview"
                 width="280"
                 height="220"
                 class="materialboxed"
                 src="{{mainImage}}">
        </div>

        <div class="card-products--title">
            <div>
                <span class="card-title">{{name}}</span>
                <p>{{userName}}</p>
            </div>

            <!--Favorite-->
            <div>
                <i id="fav_{{id}}" class="material-icons hoverable">favorite_border</i>
            </div>
        </div>

        <!--Rank-->
        <div class="card-products--ranking">
            {{#stars}}
                <i class="material-icons">{{.}}</i>
            {{/stars}}
        </div>

        <!--Description-->
        <div class="card-products--extra-information">
            <p>{{description}}</p>
            <p>Certificaciones: {{certificationsString}}</p>
            <p> {{maximum}} productos disponibles</p>
            <a href="/web/buyer/products/{{id}}">Ver detalle</a>
        </div>

    </div>

</div>
