<div class="container-fluid detail-products">
    <div class="row ">
        <div class="col s12 m4 l8 detail-products--photos">
            <!--Breadcrum-->
            <div class="col s12 m4 l12 detail-products--breadcrumb">
                <p>Lorem ipsum </p> - <P>Lorem ipsum</P>
            </div>

            <!--Photo List-->
            <div class="col s12 m4 l2 detail-products--photo-min">
                {{#images}}
                    <span class="z-depth-1">
                     <img class="materialboxed"
                          width="80"
                          height="80"
                          src="{{s3Link}}">
                    </span>
                {{/images}}
            </div>

            <!--Selected photo-->
            <div class="col s12 m4 l10 detail-products--photo-container">
                <div class="slider">
                    <ul class="slides">
                        {{#images}}
                            <li>
                                <img src="{{s3Link}}">
                            </li>
                        {{/images}}
                    </ul>
                </div>
            </div>
        </div>

        <!--View Card-->
        <div class="col s12 m4 l4 card card-detail">
            <i class="material-icons">favorite_border</i>
            <div class="card-detail--information">
                <h5> {{name}} </h5>
                <h6> TODO categorias</h6>
                <p class="detail">{{description}}</p>

                <a class="waves-effect waves-light btn modal-trigger" href="#pricingModal_{{id}}">Solicitar cotización</a>

                <p class="seller"> {{minimum}} cantidad mínima de compra</p>
                <p class="seller"> {{maximum}} productos disponibles</p>
                <p class="seller"> {{batch}} lotes de product</p>

                <p class="addres">
                    <i class="material-icons">location_on</i>
                </p>

                <a class="waves-effect waves-light" href="#">Enviar mensaje</a>
            </div>
        </div>

    </div>
</div>

{{> ../../pricings/buyer/create}}
