<div id="budgetEdit_{{id}}" class="modal modals-container modals--product">
    <div class="modal-content ">

        <a href="#!" style="position:absolute;top:5px;right:5px;" class="modal-close">
            <i class="tiny material-icons close">clear</i>
        </a>

        <h5>Ofrece tu presupuesto!</h5>

        {{#budget}}
            <div class="row">
                <form method="post" action="/api/budgets/{{id}}/update" enctype="multipart/form-data">

                    <ul class="stepper horizontal" id="stepper_{{id}}">

                        <li class="step">
                            <div class="step-title waves-effect">Cotizar</div>
                            <div class="step-content">

                                <input type="hidden" name="pricingId" value="{{id}}">

                                <div class="col s12">
                                    <div class="col s6">
                                        <label for="price">Precio Unitario</label>
                                        <input type="number" name="price" step="0.01" value="{{price}}" required>
                                    </div>

                                    <div class="col s6">
                                        <label for="quantity">Cantidad total</label>
                                        <input type="number" name="quantity" value="{{quantity}}"required>
                                    </div>
                                </div>

                                <div class="col s12">
                                    <div class="input-field col s6">
                                        <select name="iva" id="iva">
                                            <option value="0">0 %</option>
                                            <option value="10.5">10.5 %</option>
                                            <option value="21">21 %</option>
                                        </select>
                                        <label>Porcentaje IVA</label>
                                    </div>

                                    <div class="input-field col s6">
                                        <select id="selectedBilling_{{id}}" name="selectedBilling">
                                            {{#pricing}}
                                                {{#requestedBilling}}
                                                    <option value="{{name}}">{{toHTMLString}}</option>
                                                {{/requestedBilling}}
                                            {{/pricing}}
                                        </select>
                                        <label>Facturación</label>
                                    </div>
                                </div>


                                <div class="col s12">
                                    <div class="col s6">
                                        <label for="total">Precio Total (s/ IVA)</label>
                                        <input id="total_price" type="number" name="total" step="0.01" style='pointer-events: none;'>
                                    </div>

                                    <div class="input-field col s6">
                                    </div>
                                </div>

                                <div class="col s12">
                                    <div class="col s6">
                                    <span class="taxes" id="taxes">
                                    </span>
                                    </div>

                                    <div class="col s6">
                                    </div>
                                </div>


                                <div class="step-actions">
                                    <button class="col s5 waves-effect waves-dark btn next-step">Siguiente</button>
                                    <div class="col s1"></div>
                                    <button class="col s5 waves-effect waves-dark btn btn-flat previous-step">Anterior</button>
                                </div>
                            </div>
                        </li>

                        <li class="step">
                            <div class="step-title waves-effect">Vigencia</div>
                            <div class="step-content">

                                <input type="hidden" name="pricingId" value="{{id}}">

                                <div class="col s12">
                                    <div class="col s6">
                                        <label for="delivery">Plazo de Entrega (días)</label>
                                        <input type="number" name="delivery" min="0" max="90" value="{{deliveryAfterConfirm}}" required>
                                    </div>
                                    <div class="col s6">
                                        <label for="ttl">Vigencia de la Propuesta (días)</label>
                                        <input type="number" name="ttl" min="0" max="14" required>
                                    </div>
                                </div>

                                <div class="step-actions">
                                    <button class="col s5 waves-effect waves-dark btn next-step">Siguiente</button>
                                    <div class="col s1"></div>
                                    <button class="col s5 waves-effect waves-dark btn btn-flat previous-step">Anterior</button>
                                </div>
                            </div>
                        </li>


                        <li class="step">
                            <div class="step-title waves-effect">Adjuntos</div>
                            <div class="step-content">
                                <div class="col s12 modals--sucessCenter">
                                    <p>Elija los adjuntos que desea presentar</p>
                                </div>

                                <div class="col s12 modals--sucessCenter">
                                    <div class="file-field input-field">
                                        <div class="btn">
                                            <span>Adjuntos</span>
                                            <input type="file" name="attachments" multiple>
                                        </div>
                                        <div class="file-path-wrapper">
                                            <input class="file-path validate" type="text" placeholder="Subí una o más archivos">
                                        </div>
                                    </div>
                                </div>

                                <div class="step-actions">
                                    <button type="submit"
                                            class="col s5 waves-effect waves-dark btn">Cotizar</button>
                                    <div class="col s1"></div>
                                    <button class="col s5 waves-effect waves-dark btn btn-flat previous-step">Anterior</button>
                                </div>
                            </div>
                        </li>
                    </ul>

                </form>
            </div>
        {{/budget}}

    </div>
</div>