<div class="container-fluid detail-products">
    <div class="row ">
        <div class="col s12 m4 l8 detail-products--photos">
            <div class="col s12 m4 l12 detail-products--breadcrumb">
                {{#pricing}}
                    {{#provider}}
                        <p>Cotizaciones</p> - <p>{{name}}</p>
                    {{/provider}}
                {{/pricing}}
            </div>

            <div class="col s12 m4 l2 detail-products--photo-min">
                <!-- TODO Previo de lista imagenes (i.e: MELI) -->
            </div>

            <!--Selected photo-->
            <div class="col s12 m4 l10 detail-products--photo-container">
                <div class="slider">
                    <ul class="slides">
                        {{#pricing}}
                            {{#product}}
                                {{#images}}
                                    <li>
                                        <img src="{{s3Link}}">
                                    </li>
                                {{/images}}
                            {{/product}}
                        {{/pricing}}

                    </ul>
                </div>
            </div>
        </div>

        <div class="col s12 m4 l4 card card-detail">
            <!--<i class="material-icons">favorite_border</i>-->
            <div class="card-detail--information">
                {{#pricing}}
                    {{{pricingState}}}
                    {{#product}}
                        <h5> {{name}} </h5>
                    {{/product}}

                    <p class="green-text"> <span><strong>Proveedor</strong></span>: {{providerName}}</p>
                    <p class="blue-text"> <span><strong>Solicitado por</strong></span>: {{buyer.name}}</p>
                {{/pricing}}


                <ul class="collapsible">
                    {{#pricing}}

                    <li>
                        <div class="collapsible-header">
                            <i class="material-icons">chevron_right</i>Solicitud
                        </div>
                        <div class="collapsible-body">
                            <p class="seller"> <span><strong>Especificaciones</strong></span>:
                                <p><i>{{specifications}}</i></p>
                            </p>
                            <p class="seller"> <span><strong>Cantidad solicitada</strong></span>: {{quantity}} unidades</p>
                            {{#sample}}
                                <p class="seller"> <span><strong>Requiere Muestra</strong></span>: SI</p>
                            {{/sample}}
                            {{^sample}}
                                <p class="seller"> <span><strong>Requiere Muestra</strong></span>: NO</p>
                            {{/sample}}

                            <p class="seller"> <span><strong>Plazo de Entrega</strong></span>: {{deliveryTerm.toHTMLString}}</p>

                            <p class="seller"> <span><strong>Tipos de Facturación</strong></span>:
                            {{#requestedBilling}}
                                 <p><i>{{toHTMLString}}</i></p>
                            {{/requestedBilling}}
                            </p>

                            <p class="seller"> <span><strong>Adjuntos</strong></span>:
                            {{#pricingAttachements}}
                                <li>
                                    <a href="{{s3Link}}"
                                       class="hoverable"
                                       target="_blank"
                                       download>
                                        <i class="material-icons left">cloud_download</i>
                                        {{filename}}
                                    </a>
                                </li>
                            {{/pricingAttachements}}
                        </div>
                    </li>
                        {{#budget}}

                        <li>
                            <div class="collapsible-header">
                                <i class="material-icons">chevron_right</i>Cotización
                            </div>
                            <div class="collapsible-body">
                                <p class="seller"> <span><strong>Precio Unitario</strong></span>: ${{price}}</p>
                                <p class="seller"> <span><strong>Cantidad</strong></span>: {{quantity}} unidades</p>
                                <p class="seller"> <span><strong>IVA</strong></span>: ${{iva}}</p>
                                <p class="seller"> <span><strong>Precio Total</strong></span>: ${{total}}</p>
                                <p class="seller"> <span><strong>Plazo de Entrega</strong></span>:
                                    {{deliveryAfterConfirm}} días despues de confirmada la cotizacion
                                </p>
                                <p class="green-text"> <span><strong>Vigencia</strong></span>: {{ttlDate}}</p>

                                <p class="seller"> <span><strong>Adjuntos</strong></span>:
                                <ul>
                                    {{#budgetAttachement}}
                                        <li>
                                            <a href="{{s3Link}}"
                                               class="hoverable"
                                               target="_blank"
                                               download>
                                                <i class="material-icons left">cloud_download</i>
                                                {{filename}}
                                            </a>
                                        </li>
                                    {{/budgetAttachement}}
                                </ul>
                            </div>
                        </li>
                        {{/budget}}

                    {{/pricing}}

                </ul>

                {{#pricing}}
                    {{{buyerActions}}}
                {{/pricing}}

            </div>
        </div>
    </div>
</div>

{{#pricing}}
    {{> accept}}
    {{> cancel}}
{{/pricing}}