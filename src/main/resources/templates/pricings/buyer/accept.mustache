<div id="budgetAccept_{{id}}" class="modal modals-container modals--product">
    <div class="modal-content ">

        <a href="#!" style="position:absolute;top:5px;right:5px;" class="modal-close">
            <i class="tiny material-icons close">clear</i>
        </a>

        <h5>Deseas aprobar esta cotización?</h5>

        <div class="row">
            <form method="post" action="/budgets/{{budget.id}}/accept" enctype="multipart/form-data">
                <input type="hidden" name="pricingId" value="{{id}}">

                <div class="col s12">
                    {{#product}}
                        <div class="col s2 card-panel z-depth-1 cargar--product">
                            <img class="materialboxed"
                                 height="80"
                                 width="80"
                                 src="{{mainImage}}">
                        </div>

                        <div class="col s4">
                            <h5 class="blue-grey-text">{{name}}</h5>
                            <p class="lighten-1-text">{{description}}</p>
                        </div>
                    {{/product}}
                    {{#budget}}
                        <div class="col s2">
                            <p class="grey-text lighten-1-text"> $ {{price}}</p>
                            <p class="grey-text lighten-1-text"> {{quantity}} unidades</p>
                            <p class="grey-text lighten-1-text"> Total $ {{total}} </p>
                        </div>
                        <div class="col s4">
                            <p class="grey-text lighten-1-text"> Entrega a los {{deliveryAfterConfirm}} días</p>
                            <p class="grey-text lighten-1-text"> Facturación {{billing}} </p>
                        </div>
                    {{/budget}}
                </div>
                <div class="col s12">
                    <a href="#!" class="col s5 waves-effect waves-dark btn btn-flat modal-close">Cancelar</a>
                    <div class="col s1"></div>
                    <button type="submit" class="col s5 waves-effect waves-dark btn">Aprovar</button>
                </div>
            </form>
        </div>

    </div>
</div>