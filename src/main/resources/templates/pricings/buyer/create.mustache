    <div id="pricingModal_{{id}}" class="modal modals-container modals--product">
        <div class="modal-content ">

            <a href="#!" style="position:absolute;top:5px;right:5px;" class="modal-close">
                <i class="tiny material-icons close">clear</i>
            </a>

            <h5>Solicita tu cotización!</h5>

            <div class="row">
                <form id="pricing_{{id}}" method="post" action="/api/pricings" enctype="multipart/form-data">

                    <ul class="stepper horizontal" id="stepper_{{id}}">

                        <li class="step">
                            <div class="step-title waves-effect">Información</div>
                            <div class="step-content">
                                <div class="col s12">
                                    <div class="col s2 card-panel z-depth-1 cargar--product">
                                        <img class="materialboxed"
                                             height="80"
                                             width="80"
                                             src="{{mainImage}}">
                                    </div>

                                    <div class="col s8">
                                        <h5 class="blue-grey-text">{{name}}</h5>
                                        <p class="lighten-1-text">{{description}}</p>
                                    </div>
                                    <div class="col s2">
                                        <p class="grey-text lighten-1-text"> {{minimum}} Min</p>
                                        <p class="grey-text lighten-1-text"> {{maximum}} Max</p>
                                        <p class="grey-text lighten-1-text"> {{batch}}{{batchSize}} Lote</p>
                                    </div>
                                </div>

                                <div class="col s12">
                                    <label for="quantity">Unidades a solicitar</label>
                                    <input type="number" name="quantity" required>
                                </div>

                                <div class="step-actions">
                                    <button class="col s5 waves-effect waves-dark btn next-step">Siguiente</button>
                                    <div class="col s1"></div>
                                    <a href="#!" class="col s5 modal-close waves-effect waves-dark btn btn-flat">Cancelar</a>
                                </div>
                            </div>
                        </li>

                        <li class="step">
                            <div class="step-title waves-effect">Especificaciones</div>
                            <div class="step-content">

                                <div class="input-field col s12">
                                    <select name="billing" multiple>
                                        <optgroup label="Factura Tipo A">
                                            <option value="TYPE_A">Factura Tipo A</option>
                                            <option value="TYPE_A_RETENTION">Factura Tipo A (operacion sujeta a retencion)</option>
                                            <option value="TYPE_M">Factura Tipo M</option>
                                        </optgroup>
                                        <optgroup label="Factura Tipo B">
                                            <option value="TYPE_B">Factura Tipo B</option>
                                        </optgroup>
                                        <optgroup label="Factura Tipo C">
                                            <option value="TYPE_C">Factura Tipo C</option>
                                        </optgroup>
                                        <optgroup label="Factura Tipo E">
                                            <option value="TYPE_E">Factura Tipo E</option>
                                        </optgroup>
                                    </select>
                                    <label>Facturacion</label>
                                </div>

                                <div class="input-field col s12">
                                    <select name="deliveryTerm">
                                        <option value="" disabled selected>Selecciona una opcion</option>
                                        <option value="IN_15_DAYS">15 días</option>
                                        <option value="IN_30_DAYS">30 días</option>
                                        <option value="IN_45_DAYS">45 días</option>
                                    </select>
                                    <label>Plazos de Entrega</label>
                                </div>

                                <div class="col s12">
                                    <label for="specifications" >Especificaciones</label>
                                    <textarea name="specifications" class="materialize-textarea"></textarea>

                                    <input type="hidden" name="productId" value="{{id}}">
                                </div>

                                <div class="col s12">
                                    <label>
                                        <input name="sample" type="checkbox" class="filled-in" />
                                        <span>Solicita envío de muestra</span>
                                    </label>
                                </div>

                                <div class="step-actions">
                                    <button class="col s5 waves-effect waves-dark btn next-step">Siguiente</button>
                                    <div class="col s1"></div>
                                    <button class="col s5 waves-effect waves-dark btn btn-flat previous-step">Anterior</button>
                                </div>
                            </div>
                        </li>


                        <li class="step">
                            <div class="step-title waves-effect">Adjuntos</div>
                            <div class="step-content">
                                <div class="col s12 modals--sucessCenter">
                                    <p>Elija los adjuntos que desea presentar</p>
                                </div>

                                <div class="col s12 modals--sucessCenter">
                                    <div class="file-field input-field">
                                        <div class="btn">
                                            <span>Adjuntos</span>
                                            <input type="file" name="attachments" multiple>
                                        </div>
                                        <div class="file-path-wrapper">
                                            <input class="file-path validate" type="text" placeholder="Subí una o más archivos">
                                        </div>
                                    </div>
                                </div>

                                <div class="step-actions">
                                    <button type="submit"
                                            class="col s5 waves-effect waves-dark btn">Solicitar cotización</button>
                                    <div class="col s1"></div>
                                    <button class="col s5 waves-effect waves-dark btn btn-flat previous-step">Anterior</button>
                                </div>
                            </div>
                        </li>
                    </ul>

                </form>
            </div>

        </div>
    </div>