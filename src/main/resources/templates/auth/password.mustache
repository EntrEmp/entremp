<div class="login">
    <div class="card-panel z-depth-1 card--login">

        <div class="row login--img">
            <div class="col s8 offset-s2">
                <img src="/images/logo/azul.png">
            </div>
        </div>
        <div class="row col s12 login--input">
            <form id="reset" method="post" action="/reset">

                <section class="col s12">
                    <h6>Recuperar contraseña!</h6>
                    <p>Escribe la dirección de correo electrónico asociado a tu cuenta EntrEmp</p>
                    <div class="col s12">
                        <label class="col s12" for="password">Contraseña</label>
                        <input class="validate" type="password" name="password" id="password" required>
                    </div>
                    <div class="col s12">
                        <label class="col s12" for="confirmation">Confirmar tu contraseña</label>
                        <input class="validate" type="password" name="confirmation" required>
                    </div>
                    <input type="hidden" name="token" value="{{token}}">
                    <div class="col s12">
                        <button class=" col s12 btn waves-effect waves-light center-align row" type="submit" name="action">Continuar</button>
                    </div>
                </section>

            </form>
        </div>

    </div>
</div>
