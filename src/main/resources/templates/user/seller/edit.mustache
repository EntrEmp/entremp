<div id="modalImage" class="modal modals-container modals--sucess">
    <div class="modal-content">

        <a href="#!" style="position:absolute;top:5px;right:5px;" class="modal-close">
            <i class="tiny material-icons close">clear</i>
        </a>

        <div class="row">

            <form id="imageForm" method="post" action="/api/users/{{userId}}/image" enctype="multipart/form-data">
                <input type="hidden" name="role" value="seller">

                <div class="col s12">
                    <h5>Imagenes</h5>
                </div>

                <div class="col s12 modals--sucessCenter">
                    <p>Elija su foto de perfil</p>
                </div>

                <div class="col s12 modals--sucessCenter">
                    <div class="file-field input-field">
                        <div class="btn">
                            <span>Imagen</span>
                            <input type="file" name="image">
                        </div>
                        <div class="file-path-wrapper">
                            <input class="file-path validate" type="text" placeholder="Subí tu foto de perfil">
                        </div>
                    </div>
                </div>

                <div class="col s8 push-s2 modals--next">
                    <!--submit con flecha-->
                    <a href="#!" class=" col s5 btn modal-close waves-effect waves-green btn-flat">Cancelar </a>
                    <div class="col s2"></div>
                    <button class=" col s5 btn waves-effect waves-light modals--button"
                            id="editTags" type="submit" name="action">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>

