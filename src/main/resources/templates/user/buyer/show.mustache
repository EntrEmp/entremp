<div class="profile">
    <div class="col s12 card--profile widthNone">

        <div class="row">
            <div class="col s7">
                <div class="col s12 profileCard--img">
                    <div>
                        <img src="{{image}}" alt="profile" class="circle responsive-img materialboxed"> <!-- notice the "circle" class -->
                    </div>
                </div>
                <div class="col s12 center-align">
                    <p><a href="/buyer/profile/{{id}}/edit">Editar</a></p>
                </div>
                <div class="col s12 card-panel z-depth-1 card--profile">
                    <div class=" col s12 profile--data no-divider">
                        <div class="col s12 data--left">
                            <p class="col s6 data--right">Nombre o razón social: </p> <p class="col s6 data--left">{{name}}</p>
                            <p class="col s6 data--right">CUIT: </p> <p class="col s6 data--left">{{cuit}}</p>
                            <p class="col s6 data--right">Teléfono: </p> <p class="col s6 data--left">{{phone}}</p>
                        </div>
                    </div>
                </div>

                <div class="col s12 card-panel z-depth-1 card--profile">
                    <div class="col s12 profile--data no-divider">
                        <div class="col s6">
                            <p class="col s12 data--right">Direcciones:</p>
                        </div>
                        <div class="col s6 data--left">
                            {{#addresses}}
                                <p>{{address}}</p>
                                <p>{{wrapper}}</p>
                            {{/addresses}}
                        </div>
                    </div>
                </div>

                <div class="col s12 card-panel z-depth-1  card--profile">
                    <div class=" col s12 profile--data no-divider">
                        <div class="col s12">
                            <div class="col s6">
                                <p class="data--right">Mail: </p>
                                <p class="data--right">Clave: </p>
                            </div>
                            <div class="col s6">
                                <p class="data--left">{{mail}}</p>
                                <p class="data--left">*********</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col s5 profile--sidebar">
                <div class="col s12">
                    {{#hasProducts}}
                        <h6> Otros productos que te pueden interesar</h6>
                    {{/hasProducts}}

                    {{#products}}
                        <div class="col s6">
                        <div class="card card-products">
                            <!--Preview Image-->
                            <div class="card-image card-products--image z-depth-1">
                                <img alt="preview"
                                     width="280"
                                     height="220"
                                     class="materialboxed"
                                     src="{{mainImage}}">
                            </div>

                            <div class="card-products--title">
                                <div>
                                    <span class="card-title">{{name}}</span>
                                    <p>{{userName}}</p>
                                </div>

                                <!--Favorite-->
                                <div>
                                    <i id="fav_{{id}}" class="material-icons hoverable">favorite_border</i>
                                </div>
                            </div>

                            <!--Rank-->
                            <div class="card-products--ranking">
                                {{#stars}}
                                    <i class="material-icons">{{.}}</i>
                                {{/stars}}
                            </div>

                            <!--Description-->
                            <div class="card-products--extra-information">
                                <p>{{description}}</p>
                                <p>Certificaciones: {{certificationsString}}</p>
                                <p> {{maximum}} productos disponibles</p>
                                <a href="/buyer/products/{{id}}">Ver detalle</a>
                            </div>
                        </div>
                    </div>
                    {{/products}}
                </div>
            </div>


        </div>


    </div>

</div>
